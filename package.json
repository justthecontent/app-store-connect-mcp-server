{
  "name": "@justthecontent/appstore-connect-mcp-server",
  "version": "1.1.1",
  "description": "A Model Context Protocol (MCP) server for interacting with the App Store Connect API",
  "type": "module",
  "main": "./dist/src/index.js",
  "scripts": {
    "build": "tsc && shx chmod +x dist/src/*.js",
    "start": "node dist/src/index.js",
    "prepublishOnly": "npm run build"
