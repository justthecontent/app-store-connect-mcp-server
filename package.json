  "keywords": [
    "mcp",
    "model-context-protocol",
    "app-store-connect",
    "apple",
    "ios",
    "macos",
    "api",
    "testflight",
    "beta-testing",
    "app-analytics"
  ],
  "author": "Krishna Yekkala",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justthecontent/app-store-connect-mcp-server.git"
  },
  "homepage": "https://github.com/justthecontent/app-store-connect-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/justthecontent/app-store-connect-mcp-server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.0",
    "sharp": "^0.32.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.0",
